  <div class="main-content">
    <div class="header">
      <h1>Dashboard</h1>
      <button onclick="refreshData()">🔄 Refresh</button>
    </div>

    <div class="cards">
      <div class="card">
        <h3>Projects</h3>
        <p id="projectCount">Loading...</p>
      </div>
      <div class="card">
        <h3>Assets</h3>
        <p id="assetCount">Loading...</p>
      </div>
      <div class="card">
        <h3>Bugs</h3>
        <p id="bugCount">Loading...</p>
      </div>
    </div>

    <div class="log-section">
      <h2>Activity Log</h2>
      <ul id="logList">
        <!-- Logs will be inserted here -->
      </ul>
    </div>
  </div>

  <script>
    document.addEventListener("DOMContentLoaded", function () {
      refreshData();
    });

    function refreshData() {
      const data = {
        projects: Math.floor(Math.random() * 10) + 1,
        assets: Math.floor(Math.random() * 200) + 50,
        bugs: Math.floor(Math.random() * 20),
        logs: [
          "🎮 Game assets synced",
          "🛠️ Bug fixed in physics engine",
          "🚀 Build completed: v2.3.1",
          "🎧 Added new soundtrack to level 4",
          "📦 Exported new game bundle"
        ]
      };

      document.getElementById("projectCount").textContent = data.projects;
      document.getElementById("assetCount").textContent = data.assets;
      document.getElementById("bugCount").textContent = data.bugs;

      const logList = document.getElementById("logList");
      logList.innerHTML = "";

      data.logs.forEach(log => {
        const li = document.createElement("li");
        li.textContent = log;
        logList.appendChild(li);
      });
    }
  </script>
